<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mauiluanvantotnghiep.Views.UserProfilePage.UpdatePasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:mauiluanvantotnghiep.Converters"
    xmlns:vm="clr-namespace:mauiluanvantotnghiep.ViewModels"
    Title="UpdatePasswordPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:UpdatePasswordViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Cập nhật mật khẩu" />

            <Entry
                IsPassword="True"
                Placeholder="Mật khẩu cũ"
                Text="{Binding CurrentPassword}" />

            <Entry
                IsPassword="True"
                Placeholder="Mật khẩu mới"
                Text="{Binding NewPassword}" />

            <!--  Phần hiển thị tiêu chí định dạng mật khẩu  -->
            <Label
                FontAttributes="Bold"
                FontSize="14"
                Text="Định dạng mật khẩu:" />
            <VerticalStackLayout Padding="10,0,0,0" Spacing="5">

                <!--  Tiêu chí: Có chứa số  -->
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontSize="16"
                        Text="●"
                        TextColor="{Binding IsDigitValid, Converter={StaticResource BoolToColorConverter}}"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="12"
                        Text="Có chứa số"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Tiêu chí: Có ít nhất một chữ in hoa  -->
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontSize="16"
                        Text="●"
                        TextColor="{Binding IsUpperCaseValid, Converter={StaticResource BoolToColorConverter}}"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="12"
                        Text="Có chữ in hoa"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Tiêu chí: Có ít nhất một chữ in thường  -->
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontSize="16"
                        Text="●"
                        TextColor="{Binding IsLowerCaseValid, Converter={StaticResource BoolToColorConverter}}"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="12"
                        Text="Có chữ in thường"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Tiêu chí: Tối thiểu 8 ký tự  -->
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontSize="16"
                        Text="●"
                        TextColor="{Binding IsLengthValid, Converter={StaticResource BoolToColorConverter}}"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="12"
                        Text="Tối thiểu 8 ký tự"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Tiêu chí: Có chứa ký tự đặc biệt  -->
                <HorizontalStackLayout Spacing="5">
                    <Label
                        FontSize="16"
                        Text="●"
                        TextColor="{Binding IsSpecialCharValid, Converter={StaticResource BoolToColorConverter}}"
                        VerticalOptions="Center" />
                    <Label
                        FontSize="12"
                        Text="Có chứa ký tự đặc biệt"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Entry
                IsPassword="True"
                Placeholder="Xác nhận mật khẩu mới"
                Text="{Binding ConfirmPassword}" />

            <!--  Hiển thị thông báo lỗi hoặc thành công  -->
            <Label
                HorizontalOptions="Center"
                Text="{Binding UpdateMessage}"
                TextColor="Red" />

            <Button Command="{Binding UpdatePasswordCommand}" Text="Cập nhật" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>