<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mauiluanvantotnghiep.Views.TransactionPage.TransactionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:mauiluanvantotnghiep.Models"
    xmlns:vm="clr-namespace:mauiluanvantotnghiep.ViewModels"
    x:Name="thisPage"
    Title="Lịch sử giao dịch"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:TransactionsViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>

        <!--  MAIN UI LAYOUT  -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowDefinitions="Auto,Auto,Auto,*">

            <!--  Row 0: Banner Carousel  -->
            <StackLayout
                Grid.Row="0"
                Padding="0,5"
                Spacing="0">
                <CarouselView
                    x:Name="bannerCv"
                    HeightRequest="180"
                    IndicatorView="bannerIv"
                    ItemsSource="{Binding Banners}"
                    Position="{Binding BannerPosition, Mode=TwoWay}"
                    WidthRequest="400">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="1">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Image
                                    Aspect="AspectFill"
                                    HorizontalOptions="Fill"
                                    Source="{Binding BannerImageUrl}"
                                    VerticalOptions="Fill" />
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView
                    x:Name="bannerIv"
                    Margin="0,10,0,0"
                    HorizontalOptions="Center"
                    IndicatorColor="LightGray"
                    IndicatorsShape="Circle"
                    SelectedIndicatorColor="DarkGray" />
            </StackLayout>

            <!--  Row 1: Search + Month Filter Button  -->
            <Grid
                Grid.Row="1"
                Padding="10,0,10,0"
                ColumnDefinitions="*,Auto"
                ColumnSpacing="8">
                <Border
                    HeightRequest="40"
                    HorizontalOptions="FillAndExpand"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <SearchBar
                        BackgroundColor="Transparent"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Tìm kiếm giao dịch"
                        Text="{Binding SearchText, Mode=TwoWay}"
                        VerticalOptions="Center" />
                </Border>
                <Button
                    Grid.Column="1"
                    BackgroundColor="WhiteSmoke"
                    Command="{Binding OpenMonthPopupCommand}"
                    HeightRequest="40"
                    ImageSource="filter.png"
                    Text="Bộ lọc"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Grid>

            <!--  Row 2: Status-Filter Buttons  -->
            <HorizontalStackLayout
                Grid.Row="2"
                Padding="10,8"
                HorizontalOptions="Center"
                Spacing="0">
                <!--  All  -->
                <Border
                    Padding="0"
                    Stroke="Transparent"
                    StrokeThickness="3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="22" />
                    </Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger
                            Binding="{Binding SelectedFilter}"
                            TargetType="Border"
                            Value="All">
                            <Setter Property="Stroke" Value="Purple" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Button
                        Padding="12,6"
                        BackgroundColor="WhiteSmoke"
                        Command="{Binding FilterCommand}"
                        CommandParameter="All"
                        Text="Tất cả"
                        TextColor="Black" />
                </Border>
                <!--  Thành Công  -->
                <Border
                    Padding="0"
                    Stroke="Transparent"
                    StrokeThickness="3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="22" />
                    </Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger
                            Binding="{Binding SelectedFilter}"
                            TargetType="Border"
                            Value="Success">
                            <Setter Property="Stroke" Value="Purple" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Button
                        Padding="12,6"
                        BackgroundColor="WhiteSmoke"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Success"
                        Text="Thành Công"
                        TextColor="Black" />
                </Border>
                <!--  Đang xử lý  -->
                <Border
                    Padding="0"
                    Stroke="Transparent"
                    StrokeThickness="3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="22" />
                    </Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger
                            Binding="{Binding SelectedFilter}"
                            TargetType="Border"
                            Value="Pending">
                            <Setter Property="Stroke" Value="Purple" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Button
                        Padding="12,6"
                        BackgroundColor="WhiteSmoke"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Pending"
                        Text="Đang xử lý"
                        TextColor="Black" />
                </Border>
                <!--  Thất Bại  -->
                <Border
                    Padding="0"
                    Stroke="Transparent"
                    StrokeThickness="3">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="22" />
                    </Border.StrokeShape>
                    <Border.Triggers>
                        <DataTrigger
                            Binding="{Binding SelectedFilter}"
                            TargetType="Border"
                            Value="Failed">
                            <Setter Property="Stroke" Value="Purple" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Button
                        Padding="12,6"
                        BackgroundColor="WhiteSmoke"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Failed"
                        Text="Thất Bại"
                        TextColor="Black" />
                </Border>
            </HorizontalStackLayout>

            <!--  Row 3: Grouped Transactions List  -->
            <CollectionView
                Grid.Row="3"
                Margin="10,0"
                IsGrouped="True"
                ItemsSource="{Binding GroupedTransactions}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,8"
                            Padding="6"
                            BackgroundColor="#6699FF"
                            CornerRadius="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{Binding Title}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Orders">
                        <Frame
                            Margin="0,4"
                            Padding="10"
                            CornerRadius="6"
                            HasShadow="True"
                            HeightRequest="85">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.NavigateToDetailCommand, Source={x:Reference thisPage}}" CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid
                                ColumnDefinitions="Auto,*,Auto"
                                ColumnSpacing="12"
                                RowDefinitions="Auto,Auto">
                                <AbsoluteLayout
                                    Grid.RowSpan="2"
                                    HeightRequest="40"
                                    WidthRequest="40">
                                    <Image
                                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                                        AbsoluteLayout.LayoutFlags="All"
                                        Aspect="AspectFit"
                                        Source="{Binding GatewayIcon}" />
                                    <Image
                                        AbsoluteLayout.LayoutBounds="1,1.3,16,16"
                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                        HeightRequest="16"
                                        Source="{Binding StatusIcon}"
                                        WidthRequest="16" />
                                </AbsoluteLayout>
                                <VerticalStackLayout
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Spacing="2">
                                    <Label FontAttributes="Bold" Text="{Binding PackageName, StringFormat='Thanh toán gói cước {0}'}" />
                                    <Label
                                        FontSize="12"
                                        Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy - HH:mm}'}"
                                        TextColor="Gray" />
                                    <Label FontSize="12" Text="{Binding Status}" />
                                </VerticalStackLayout>
                                <Label
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    FontSize="14"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding Amount, StringFormat='{0:N0} đ'}"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <!--  MONTH FILTER POPUP OVERLAY  -->
        <BoxView
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsVisible="{Binding IsMonthPopupVisible}"
            Opacity="0.5"
            Color="Black" />

        <Frame
            Padding="0"
            AbsoluteLayout.LayoutBounds="0.5,0.5,0.8,0.4"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="White"
            CornerRadius="12"
            HasShadow="True"
            IsVisible="{Binding IsMonthPopupVisible}">
            <StackLayout Padding="16" Spacing="0">

                <!--  Popup Header  -->
                <Border StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <SolidColorBrush Color="#6699FF" />
                    </Border.Background>
                    <Label
                        Padding="0,15,0,0"
                        FontAttributes="Bold"
                        FontSize="18"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        Text="Bộ Lọc"
                        TextColor="White" />
                </Border>

                <!--  Month Selection Grid with ScrollView  -->
                <ScrollView Margin="0,16,0,0">
                    <CollectionView ItemsSource="{Binding MonthOptions}" SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="12"
                                Orientation="Vertical"
                                Span="2"
                                VerticalItemSpacing="12" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    BorderWidth="1"
                                    Command="{Binding BindingContext.SelectMonthOptionCommand, Source={x:Reference thisPage}}"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="10"
                                    HeightRequest="40"
                                    Text="{Binding Display}">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="BackgroundColor" Value="#FF3366" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderColor" Value="#FF3366" />
                                        </DataTrigger>
                                        <DataTrigger
                                            Binding="{Binding IsSelected}"
                                            TargetType="Button"
                                            Value="False">
                                            <Setter Property="BackgroundColor" Value="White" />
                                            <Setter Property="TextColor" Value="Black" />
                                            <Setter Property="BorderColor" Value="LightGray" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>

                <!--  Popup Close  -->
                <Button
                    Margin="0,16,0,0"
                    BackgroundColor="#FF3366"
                    Command="{Binding CloseMonthPopupCommand}"
                    CornerRadius="15"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    Text="Đóng"
                    TextColor="White"
                    WidthRequest="250" />
            </StackLayout>
        </Frame>

    </AbsoluteLayout>
</ContentPage>
