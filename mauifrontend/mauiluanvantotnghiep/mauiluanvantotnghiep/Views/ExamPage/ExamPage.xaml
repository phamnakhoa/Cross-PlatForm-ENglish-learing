<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mauiluanvantotnghiep.Views.ExamPage.ExamPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Bài kiểm tra"
    BackgroundColor="AliceBlue"
    Shell.BackgroundColor="AliceBlue">

    <Grid>
        <Frame
            Margin="20"
            Padding="10,48"
            BackgroundColor="#E0BBE4"
            CornerRadius="36"
            HasShadow="True"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <VerticalStackLayout
                HorizontalOptions="Center"
                Spacing="10"
                VerticalOptions="Center">

                <!--  Image with circular border and shadow  -->
                <Frame
                    Padding="0"
                    CornerRadius="5"
                    HasShadow="False"
                    HeightRequest="250"
                    HorizontalOptions="Center"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    WidthRequest="350">
                    <Image
                        Aspect="AspectFit"
                        BackgroundColor="#E0BBE4"
                        HeightRequest="250"
                        HorizontalOptions="Center"
                        Source="bannerexam.png"
                        VerticalOptions="Center"
                        WidthRequest="350" />
                </Frame>

                <!--  Course Name  -->
                <Label
                    Margin="0,0,0,2"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalTextAlignment="Center"
                    Text="{Binding CourseName}"
                    TextColor="#4B3DFE" />

                <!--  Exam Name  -->
                <Label
                    Margin="0,0,0,8"
                    FontAttributes="Bold"
                    FontSize="25"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Name}"
                    TextColor="#4B3DFE" />

                <!--  Time Limit  -->
                <Label
                    Margin="0,0,0,5"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    Text="{Binding TimeLimitDisplay}"
                    TextColor="#7C4DFF" />

                <!--  Passing Score  -->
                <Label
                    Margin="0,0,0,10"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    Text="{Binding PassingScoreDisplay}"
                    TextColor="#7C4DFF" />

                <!--  Button  -->
                <Button
                    Margin="0,10,0,0"
                    BackgroundColor="White"
                    Command="{Binding StartExamCommand}"
                    CornerRadius="28"
                    FontAttributes="Bold"
                    FontSize="22"
                    HeightRequest="56"
                    HorizontalOptions="Fill"
                    Text="Bắt đầu"
                    TextColor="#7C4DFF" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>