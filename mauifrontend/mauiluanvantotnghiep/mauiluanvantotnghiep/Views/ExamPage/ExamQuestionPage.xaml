                                            FontFamily="MaterialIcons"
                                            FontSize="16"
                                            Text="⏰"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Text="{Binding BindingContext.TimerDisplay, Source={x:Reference ExamQuestionPageRoot}}"
                                            TextColor="White" />
                                    </HorizontalStackLayout>
                                </Frame>

                                <!--  Question Type Badge  -->
                                <Frame
                                    Grid.Column="2"
                                    Padding="8,4"
                                    BackgroundColor="White"
                                    CornerRadius="12"
                                    HasShadow="False"
                                    HorizontalOptions="End">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="🎧 Nghe"
                                        TextColor="#388E3C" />
                                </Frame>
                            </Grid>

                            <!--  Progress Bar  -->
                            <ProgressBar
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                BackgroundColor="#81C784"
                                HeightRequest="6"
                                Progress="{Binding BindingContext.ProgressValue, Source={x:Reference ExamQuestionPageRoot}}"
                                ProgressColor="White" />
                        </Grid>

                        <!--  Question Content  -->
                        <VerticalStackLayout Padding="24,20" Spacing="20">

                            <!--  Question Text  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                LineBreakMode="WordWrap"
                                Text="{Binding QuestionText}"
                                TextColor="#212121" />

                            <!--  Question Description  -->
                            <Frame
                                Padding="0"
                                BackgroundColor="#FAFAFA"
                                BorderColor="#E0E0E0"
                                CornerRadius="8"
                                HasShadow="False"
                                IsVisible="{Binding QuestionDescription, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                <WebView
                                    Margin="16"
                                    HeightRequest="150"
                                    Source="{Binding QuestionDescription, Converter={StaticResource HtmlWrapperConverter}}"
                                    VerticalOptions="FillAndExpand">
                                    <WebView.Behaviors>
                                        <behaviors:WebViewScrollBehavior />
                                    </WebView.Behaviors>
                                </WebView>
                            </Frame>

                            <!--  Audio Blanks  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Điền các từ bạn nghe được:"
                                TextColor="#424242" />

                            <CollectionView ItemsSource="{Binding Blanks}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,8">
                                            <Frame
                                                Padding="16,12"
                                                BackgroundColor="#E8F5E8"
                                                BorderColor="{Binding BorderColor}"
                                                CornerRadius="12"
                                                HasShadow="False">
                                                <Entry
                                                    FontSize="16"
                                                    Placeholder="Nhập từ nghe được..."
                                                    PlaceholderColor="#999"
                                                    Text="{Binding UserText, Mode=TwoWay}"
                                                    TextColor="#212121" />
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <!--  Helper Text  -->
                            <Label
                                FontSize="14"
                                HorizontalTextAlignment="Center"
                                Text="🎧 Nghe kỹ và điền chính xác các từ bạn nghe được"
                                TextColor="#666" />
                        </VerticalStackLayout>

                        <!--  Navigation Footer - SỬA ĐỔI  -->
                        <Grid
                            Padding="16,12"
                            BackgroundColor="#F5F5F5"
                            RowDefinitions="Auto,Auto">

                            <!--  Navigation Buttons Row  -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,*">
                                <!--  Previous Button  -->
                                <Button
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    Padding="12,8"
                                    BackgroundColor="#E3F2FD"
                                    BorderColor="#388E3C"
                                    BorderWidth="1"
                                    Command="{Binding BindingContext.PrevCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    IsEnabled="{Binding BindingContext.CanGoPrev, Source={x:Reference ExamQuestionPageRoot}}"
                                    Text="‹ Câu trước"
                                    TextColor="#388E3C" />

                                <!--  Next Button  -->
                                <Button
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    Padding="12,8"
                                    BackgroundColor="#388E3C"
                                    Command="{Binding BindingContext.NextCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    IsEnabled="{Binding BindingContext.CanGoNext, Source={x:Reference ExamQuestionPageRoot}}"
                                    Text="Câu tiếp ›"
                                    TextColor="White" />
                            </Grid>

                            <!--  Submit Button Row  -->
                            <Button
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                Padding="16,12"
                                BackgroundColor="#4CAF50"
                                Command="{Binding BindingContext.SubmitExamCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                FontSize="16"
                                IsEnabled="{Binding BindingContext.IsSubmitting, Source={x:Reference ExamQuestionPageRoot}, Converter={StaticResource InverseBooleanConverter}}"
                                Text="📝 Nộp bài"
                                TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </DataTemplate>

        <!--  Selector  -->
        <sel:QuestionTemplateSelector
            x:Key="QuestionSelector"
            AudioTemplate="{StaticResource AudioTemplate}"
            FillBlankTemplate="{StaticResource FillBlankTemplate}"
            MCQTemplate="{StaticResource MCQTemplate}"
            TrueFalseTemplate="{StaticResource TFTemplate}" />
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="16"
                BindableLayout.ItemTemplateSelector="{StaticResource QuestionSelector}"
                BindableLayout.ItemsSource="{Binding CurrentQuestionCollection}"
                Spacing="0" />
        </ScrollView>

        <!--  Loading Overlay  -->
        <Grid BackgroundColor="#80000000" IsVisible="{Binding IsSubmitting}">
            <Frame
                Padding="24"
                BackgroundColor="White"
                CornerRadius="12"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <VerticalStackLayout Spacing="16">
                    <ActivityIndicator
                        HeightRequest="32"
                        HorizontalOptions="Center"
                        IsRunning="{Binding IsSubmitting}"
                        VerticalOptions="Center"
                        WidthRequest="32" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="Đang nộp bài..."
                        TextColor="#666" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>