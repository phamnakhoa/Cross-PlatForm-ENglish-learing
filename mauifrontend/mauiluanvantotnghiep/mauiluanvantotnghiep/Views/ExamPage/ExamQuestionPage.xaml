                                        <behaviors:WebViewScrollBehavior />
                                    </WebView.Behaviors>
                                </WebView>
                            </Frame>

                            <!--  Answer Input  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Nhập đáp án của bạn:"
                                TextColor="#424242" />

                            <Frame
                                Padding="0"
                                BackgroundColor="#FFF3E0"
                                BorderColor="{Binding FillBlankBorderColor}"
                                CornerRadius="12"
                                HasShadow="False">
                                <Entry
                                    Margin="16,12"
                                    FontSize="18"
                                    Placeholder="Nhập câu trả lời..."
                                    PlaceholderColor="#999"
                                    Text="{Binding UserAnswer, Mode=TwoWay}"
                                    TextColor="#212121" />
                            </Frame>

                            <!--  Helper Text  -->
                            <Label
                                FontSize="14"
                                HorizontalTextAlignment="Center"
                                Text="💡 Vui lòng nhập chính xác từ/cụm từ cần điền"
                                TextColor="#666" />
                        </VerticalStackLayout>

                        <!--  Navigation Footer - SỬA ĐỔI  -->
                        <Grid
                            Padding="16,12"
                            BackgroundColor="#F5F5F5"
                            RowDefinitions="Auto,Auto">

                            <!--  Navigation Buttons Row  -->
