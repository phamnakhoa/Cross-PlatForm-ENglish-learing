                                    </Frame.GestureRecognizers>
                                </Frame>

                                <!--  False Option  -->
                                <Frame
                                    Grid.Column="1"
                                    Padding="20,16"
                                    BackgroundColor="{Binding Options[1].BackgroundColor}"
                                    BorderColor="{Binding Options[1].IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#F44336|#E0E0E0'}"
                                    CornerRadius="12"
                                    HasShadow="False">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <RadioButton
                                            Grid.Column="0"
                                            IsChecked="{Binding Options[1].IsSelected, Mode=TwoWay}"
                                            VerticalOptions="Center" />
                                        <VerticalStackLayout
                                            Grid.Column="1"
                                            Margin="12,0,0,0"
                                            HorizontalOptions="Center"
                                            Spacing="4">
                                            <Label
                                                FontSize="24"
                                                HorizontalOptions="Center"
                                                Text="✗"
                                                TextColor="#F44336" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="13"
                                                HorizontalOptions="Center"
                                                Text="SAI"
                                                TextColor="#212121" />
                                        </VerticalStackLayout>
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Options[1].SelectCommand}" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>

                        <!--  Navigation Footer - SỬA ĐỔI  -->
                        <Grid
                            Padding="16,12"
                            BackgroundColor="#F5F5F5"
                            RowDefinitions="Auto,Auto">

                            <!--  Navigation Buttons Row  -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,*">
                                <!--  Previous Button  -->
                                <Button
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    Padding="12,8"
                                    BackgroundColor="#E3F2FD"
                                    BorderColor="#7B1FA2"
                                    BorderWidth="1"
                                    Command="{Binding BindingContext.PrevCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    IsEnabled="{Binding BindingContext.CanGoPrev, Source={x:Reference ExamQuestionPageRoot}}"
                                    Text="‹ Câu trước"
                                    TextColor="#7B1FA2" />

                                <!--  Next Button  -->
                                <Button
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
