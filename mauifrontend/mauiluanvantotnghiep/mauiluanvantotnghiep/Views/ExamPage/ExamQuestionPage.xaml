<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="mauiluanvantotnghiep.Views.ExamPage.ExamQuestionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:mauiluanvantotnghiep.Behaviors"
    xmlns:conv="clr-namespace:mauiluanvantotnghiep.Converters"
    xmlns:sel="clr-namespace:mauiluanvantotnghiep.Selectors"
    xmlns:vm="clr-namespace:mauiluanvantotnghiep.ViewModels"
    x:Name="ExamQuestionPageRoot"
    Title="Bài Kiểm Tra"
    BackgroundColor="#F8F9FA">

    <ContentPage.BindingContext>
        <vm:ExamQuestionPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <!--  Converters  -->
        <conv:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <conv:HtmlWrapperConverter x:Key="HtmlWrapperConverter" />
        <conv:IndexToDisplayConverter x:Key="IndexToDisplayConverter" />
        <conv:BoolToColorConverter x:Key="BoolToColorConverter" />

        <!--  MCQ Template  -->
        <DataTemplate x:Key="MCQTemplate">
            <Grid>
                <Frame
                    Padding="0"
                    BackgroundColor="White"
                    BorderColor="#E0E0E0"
                    CornerRadius="12"
                    HasShadow="True">
                    <VerticalStackLayout Spacing="0">
                        <!--  Header Section  -->
                        <Grid
                            Padding="20,16"
                            BackgroundColor="#1565C0"
                            RowDefinitions="Auto,Auto">

                            <!--  Question Progress and Timer Row  -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto,*">

                                <!--  Question Number  -->
                                <HorizontalStackLayout
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    Spacing="8"
                                    VerticalOptions="Center">
                                    <Frame
                                        Padding="8,4"
                                        BackgroundColor="White"
                                        CornerRadius="12"
                                        HasShadow="False">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            Text="{Binding BindingContext.CurrentIndex, Source={x:Reference ExamQuestionPageRoot}, Converter={StaticResource IndexToDisplayConverter}}"
                                            TextColor="#1565C0" />
                                    </Frame>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="{Binding BindingContext.Questions.Count, Source={x:Reference ExamQuestionPageRoot}, StringFormat='/ {0}'}"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                </HorizontalStackLayout>

                                <!--  Timer  -->
                                <Frame
                                    Grid.Column="1"
                                    Padding="12,6"
                                    BackgroundColor="#FF5722"
                                    CornerRadius="20"
                                    HasShadow="False">
                                    <HorizontalStackLayout Spacing="6">
                                        <Label
                                            FontFamily="MaterialIcons"
                                            FontSize="16"
                                            Text="⏰"
                                            TextColor="White"
                                            VerticalOptions="Center" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Text="{Binding BindingContext.TimerDisplay, Source={x:Reference ExamQuestionPageRoot}}"
                                            TextColor="White" />
                                    </HorizontalStackLayout>
                                </Frame>

                                <!--  Question Score  -->
                                <Frame
                                    Grid.Column="2"
                                    Padding="8,4"
                                    BackgroundColor="White"
                                    CornerRadius="12"
                                    HasShadow="False"
                                    HorizontalOptions="End">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="14"
                                        Text="{Binding Model.QuestionScore, StringFormat='{0} điểm'}"
                                        TextColor="#1565C0" />
                                </Frame>
                            </Grid>

                            <!--  Progress Bar  -->
                            <ProgressBar
                                Grid.Row="1"
                                Margin="0,12,0,0"
                                BackgroundColor="#90CAF9"
                                HeightRequest="6"
                                Progress="{Binding BindingContext.ProgressValue, Source={x:Reference ExamQuestionPageRoot}}"
                                ProgressColor="White" />
                        </Grid>

                        <!--  Question Content  -->
                        <VerticalStackLayout Padding="24,20" Spacing="20">

                            <!--  Question Text  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                LineBreakMode="WordWrap"
                                Text="{Binding QuestionText}"
                                TextColor="#212121" />

                            <!--  Question Description  -->
                            <Frame
                                Padding="0"
                                BackgroundColor="#FAFAFA"
                                BorderColor="#E0E0E0"
                                CornerRadius="8"
                                HasShadow="False"
                                IsVisible="{Binding QuestionDescription, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                <WebView
                                    Margin="16"
                                    HeightRequest="250"
                                    Source="{Binding QuestionDescription, Converter={StaticResource HtmlWrapperConverter}}"
                                    VerticalOptions="FillAndExpand">
                                    <WebView.Behaviors>
                                        <behaviors:WebViewScrollBehavior />
                                    </WebView.Behaviors>
                                </WebView>
                            </Frame>

                            <!--  Answer Options  -->
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Chọn đáp án:"
                                TextColor="#424242" />

                            <CollectionView ItemsSource="{Binding Options}" SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,6">
                                            <Frame
                                                Padding="16,12"
                                                BackgroundColor="{Binding BackgroundColor}"
                                                BorderColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#1976D2|#E0E0E0'}"
                                                CornerRadius="8"
                                                HasShadow="False">
                                                <Grid ColumnDefinitions="Auto,*">
                                                    <RadioButton
                                                        Grid.Column="0"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Grid.Column="1"
                                                        Margin="12,0,0,0"
                                                        FontSize="16"
                                                        LineBreakMode="WordWrap"
                                                        Text="{Binding Text}"
                                                        TextColor="#212121"
                                                        VerticalOptions="Center" />
                                                </Grid>
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding SelectCommand}" />
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                        <!--  Navigation Footer - SỬA ĐỔI  -->
                        <Grid
                            Padding="16,12"
                            BackgroundColor="#F5F5F5"
                            RowDefinitions="Auto,Auto">

                            <!--  Navigation Buttons Row  -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,*">
                                <!--  Previous Button  -->
                                <Button
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    Padding="12,8"
                                    BackgroundColor="#E3F2FD"
                                    BorderColor="#1976D2"
                                    BorderWidth="1"
                                    Command="{Binding BindingContext.PrevCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    IsEnabled="{Binding BindingContext.CanGoPrev, Source={x:Reference ExamQuestionPageRoot}}"
                                    Text="‹ Câu trước"
                                    TextColor="#1976D2" />

                                <!--  Next Button  -->
                                <Button
                                    Grid.Column="1"
                                    Margin="4,0,0,0"
                                    Padding="12,8"
                                    BackgroundColor="#1976D2"
                                    Command="{Binding BindingContext.NextCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    IsEnabled="{Binding BindingContext.CanGoNext, Source={x:Reference ExamQuestionPageRoot}}"
                                    Text="Câu tiếp ›"
                                    TextColor="White" />
                            </Grid>

                            <!--  Submit Button Row  -->
                            <Button
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                Padding="16,12"
                                BackgroundColor="#4CAF50"
                                Command="{Binding BindingContext.SubmitExamCommand, Source={x:Reference ExamQuestionPageRoot}}"
                                CornerRadius="8"
                                FontAttributes="Bold"
                                FontSize="16"
                                IsEnabled="{Binding BindingContext.IsSubmitting, Source={x:Reference ExamQuestionPageRoot}, Converter={StaticResource InverseBooleanConverter}}"
                                Text="📝 Nộp bài"
                                TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </Grid>
        </DataTemplate>

