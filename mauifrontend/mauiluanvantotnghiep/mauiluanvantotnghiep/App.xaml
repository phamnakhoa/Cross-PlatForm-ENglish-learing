<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="mauiluanvantotnghiep.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:mauiluanvantotnghiep.Converters"
    xmlns:local="clr-namespace:mauiluanvantotnghiep">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!--  Chat Converters  -->
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:IsNullConverter x:Key="IsNullConverter" />
            <converters:StringIsNotNullOrEmptyConverter x:Key="StringIsNotNullOrEmptyConverter" />
            <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
            <converters:StringNotEqualsConverter x:Key="StringNotEqualsConverter" />
            <converters:BoolToConnectionColorConverter x:Key="BoolToConnectionColorConverter" />
            <converters:BoolToConnectionStatusConverter x:Key="BoolToConnectionStatusConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
