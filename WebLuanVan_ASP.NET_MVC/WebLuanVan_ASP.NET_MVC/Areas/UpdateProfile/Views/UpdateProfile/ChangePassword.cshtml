@model WebLuanVan_ASP.NET_MVC.Areas.UpdateProfile.Models.CChangePassword

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = User.IsInRole("Admin")
        ? "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"
        : "~/Areas/User/Views/Shared/_LayoutKhung.cshtml";
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header  text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-key me-2"></i>Đổi mật khẩu
                        </h3>
                        <a asp-action="Index" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>@Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" class="form-control"
                                       placeholder="Nhập mật khẩu hiện tại"
                                       type="password" required />
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold">
                                <i class="fas fa-key me-2"></i>@Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="NewPassword" class="form-control"
                                       placeholder="Nhập mật khẩu mới (tối thiểu 8 ký tự)"
                                       type="password" required />
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <div class="form-text">
                                Mật khẩu phải chứa ít nhất:
                                <ul class="small">
                                    <li>8 ký tự trở lên</li>
                                    <li>1 chữ hoa và 1 chữ thường</li>
                                    <li>1 số và 1 ký tự đặc biệt</li>
                                </ul>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                <i class="fas fa-key me-2"></i>@Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control"
                                       placeholder="Nhập lại mật khẩu mới"
                                       type="password" required />
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle hiển thị mật khẩu
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.previousElementSibling;
                const icon = this.querySelector('i');
                const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                input.setAttribute('type', type);
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
            });
        });

        // Kiểm tra mật khẩu mạnh
        document.getElementById('NewPassword').addEventListener('input', function() {
            const password = this.value;
            const requirements = {
                length: password.length >= 8,
                upper: /[A-Z]/.test(password),
                lower: /[a-z]/.test(password),
                number: /\d/.test(password),
                special: /[^a-zA-Z0-9]/.test(password)
            };

            // Cập nhật UI hiển thị yêu cầu mật khẩu
            const requirementItems = document.querySelectorAll('.form-text ul li');
            requirementItems[0].style.color = requirements.length ? 'green' : 'red';
            requirementItems[1].style.color = (requirements.upper && requirements.lower) ? 'green' : 'red';
            requirementItems[2].style.color = (requirements.number && requirements.special) ? 'green' : 'red';
        });
    </script>
}