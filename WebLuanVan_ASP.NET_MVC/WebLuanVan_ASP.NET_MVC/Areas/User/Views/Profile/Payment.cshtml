@model List<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.COrders>
@{
    ViewData["Title"] = "Lịch sử thanh toán";
    Layout = "~/Areas/User/Views/Shared/_LayoutProfile.cshtml";
    var paymentMethods = ViewBag.PaymentMethods as List<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CPaymentMethod>;
}
@{
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4 text-primary text-center">
                <i class="fa fa-credit-card me-2"></i> Lịch sử thanh toán
            </h2>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle bg-white">
                        <thead class="table-secondary">
                            <tr>
                                <th>#</th>
                                <th>Mã đơn hàng</th>
                                <th>Gói cước</th>
                                <th>Số tiền</th>
                                <th>Phương thức</th>
                                <th>Thời gian</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var item = Model[i];
                                var method = paymentMethods?.FirstOrDefault(m => m.PaymentMethodId == item.PaymentMethodId);
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <span class="badge bg-info">@item.OrderId</span>
                                    </td>
                                    <td>@item.PackageName</td>
                                    <td>
                                        <span class="fw-bold text-success">@item.Amount.ToString("N0") ₫</span>
                                    </td>
                                    <td>
                                        @if (method != null)
                                        {
                                            @if (!string.IsNullOrEmpty(method.Logo))
                                            {
                                                <img src="@method.Logo" alt="@method.Name" style="height:24px;vertical-align:middle;" class="me-1" />
                                            }
                                            <span>@method.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@item.Name</span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Status == "Success" || item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Thành công</span>
                                        }
                                        else if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Thất bại</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i> Bạn chưa có giao dịch thanh toán nào.
                </div>
            }
        </div>
    </div>
    <partial name="~/Areas/Admin/Views/Shared/_Paging.cshtml" model="@paginate" />

</div>
