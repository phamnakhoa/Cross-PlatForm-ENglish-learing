@model List<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CCertificate>
@{
    ViewData["Title"] = "Quản lý Chứng chỉ";
    Layout = "~/Areas/User/Views/Shared/_LayoutProfile.cshtml";
}
@{
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<div class="container-fluid px-2 px-md-4">
    <div class="content-header">
        <h1 class="mb-4 text-primary"><i class="fa fa-certificate me-2"></i> Quản lý Chứng chỉ</h1>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <h5>Bộ lọc & Tìm kiếm</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-6">
                    <label class="form-label">Tìm kiếm tên chứng chỉ hoặc khóa học</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Nhập từ khóa..." autocomplete="off" />
                </div>
                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100 w-md-auto">Tìm kiếm</button>
                </div>
                <div class="col-12 col-md-3">
                    <a asp-area="User" asp-action="Certificate" asp-controller="Profile" class="btn btn-outline-secondary w-100 w-md-auto">Xóa lọc</a>
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center flex-wrap mt-4 mb-3">
        <h2>Danh sách Chứng chỉ</h2>
    </div>
    <div class="table-responsive mb-4">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th class="text-nowrap">Tên chứng chỉ</th>
                    <th class="text-nowrap d-none d-md-table-cell">Loại chứng chỉ</th>
                    <th class="text-nowrap">Ảnh</th>
                    <th class="text-nowrap">Khóa học</th>
                    <th class="text-nowrap">Ngày cấp</th>
                    <th class="text-nowrap d-none d-md-table-cell">Ngày hết hạn</th>
                    <th class="text-nowrap">Mã xác thực</th>
                    <th class="text-nowrap">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var cert in Model)
                    {
                        <tr>
                            <td class="text-truncate" style="max-width:180px;" title="@cert.CertificateTypeName">@cert.CertificateTypeName</td>
                            <td class="text-truncate d-none d-md-table-cell" style="max-width:140px;" title="@cert.CertificateTypeName">
                                @cert.CertificateTypeName
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(cert.ImageUrl))
                                {
                                    <img src="@cert.ImageUrl" alt="Certificate" style="max-width:80px;max-height:40px;border-radius:6px;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>
                            <td>@cert.CourseName</td>
                            <td>@cert.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="d-none d-md-table-cell">
                                @if (cert.ExpirationDate.HasValue)
                                {
                                    @cert.ExpirationDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Không giới hạn</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@cert.VerificationCode</span>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Verify", "Certificate", new { code = cert.VerificationCode })" title="Kiểm tra chứng chỉ">
                                    <i class="fa fa-search"></i> Kiểm tra
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">Không có chứng chỉ nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="~/Areas/Admin/Views/Shared/_Paging.cshtml" model="@paginate" />

</div>


<script>
    $('input[name="searchTerm"]').keypress(function (e) {
        if (e.which === 13) {
            $(this).closest('form').submit();
        }
    });
</script>

