@model List<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CReview>
@{
    ViewData["Title"] = "Lịch sử báo cáo/Góp ý";
    Layout = "~/Areas/User/Views/Shared/_LayoutProfile.cshtml";
}
@{
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4 text-primary text-center">
                <i class="fa fa-flag me-2"></i> Lịch sử báo cáo/Góp ý
            </h2>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle bg-white">
                        <thead class="table-secondary">
                            <tr>
                                <th>#</th>
                                <th>Thời gian gửi</th>
                                <th>Loại báo cáo</th>
                                <th>Nội dung</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var item = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        @switch (item.ReviewType)
                                        {
                                            case "2":
                                                <span class="badge bg-info">Báo cáo bài học</span>
                                                break;
                                            case "3":
                                                <span class="badge bg-warning text-dark">Báo cáo khóa học</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">Khác</span>
                                                break;
                                        }
                                    </td>
                                    <td>@item.Comment</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i> Bạn chưa gửi báo cáo/góp ý nào.
                </div>
            }
        </div>
    </div>
    <partial name="~/Areas/Admin/Views/Shared/_Paging.cshtml" model="@paginate" />

</div>

