@model List<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CReview>
@{
    ViewData["Title"] = "Lịch sử đánh giá";
    Layout = "~/Areas/User/Views/Shared/_LayoutProfile.cshtml";
}
@{
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h2 class="mb-4 text-primary text-center">
                <i class="fa fa-star me-2"></i> Lịch sử đánh giá
            </h2>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle bg-white">
                        <thead class="table-secondary">
                            <tr>
                                <th>#</th>
                                <th>Thời gian gửi</th>
                                <th>Khóa học</th>
                                <th>Nội dung</th>
                                <th>Điểm đánh giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var item = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CourseName))
                                        {
                                            <span class="fw-bold">@item.CourseName</span>
                                        }
                                        else if (!string.IsNullOrEmpty(item.LessonName))
                                        {
                                            <span class="fw-bold">@item.LessonName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@item.Comment</td>
                                    <td>
                                        @if (item.Rating > 0)
                                        {
                                            @for (int star = 1; star <= 5; star++)
                                            {
                                                if (star <= item.Rating)
                                                {
                                                    <i class="fa fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-star text-secondary"></i>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa đánh giá</span>
                                        }
                                    </td>
                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i> Bạn chưa gửi đánh giá nào.
                </div>
            }
        </div>
    </div>
    <partial name="~/Areas/Admin/Views/Shared/_Paging.cshtml" model="@paginate" />

</div>
