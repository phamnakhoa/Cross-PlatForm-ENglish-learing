<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- FontAwesome CDN -->
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Staff/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <title>@ViewData["Title"] - Staff Area</title>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside id="sidebar" class="d-flex flex-column flex-shrink-0 p-3 bg-white border-end" style="width: 260px; min-height: 100vh;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
                <img src="~/AdminTL/assets/images/logo.gif" alt="Logo" width="40" class="me-2" />
                <span class="fs-4 fw-bold text-primary">English Teacher</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-area="Staff" asp-controller="Dashboard" asp-action="Index" class="nav-link active">
                        <i class="fa-solid fa-house me-2"></i>
                        Trang chủ
                    </a>
                </li>
                <li>
                    <a asp-area="Staff" asp-controller="Course" asp-action="Index" class="nav-link text-dark">
                        <i class="fa-solid fa-book me-2"></i>
                        Khóa học
                    </a>
                </li>
                <li>
                    <a asp-area="Staff" asp-controller="Student" asp-action="Index" class="nav-link text-dark">
                        <i class="fa-solid fa-users me-2"></i>
                        Học viên
                    </a>
                </li>
                <li>
                    <a asp-area="Staff" asp-controller="Lesson" asp-action="Index" class="nav-link text-dark">
                        <i class="fa-solid fa-chalkboard-user me-2"></i>
                        Bài học
                    </a>
                </li>
                <li>
                    <a asp-area="Staff" asp-controller="Vocabulary" asp-action="Index" class="nav-link text-dark">
                        <i class="fa-solid fa-language me-2"></i>
                        Từ vựng
                    </a>
                </li>
            </ul>
            <hr>
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <i class="fa-solid fa-user me-2"></i>
                    <span>Nguyễn Văn A</span>
                </div>
                <a asp-area="Staff" asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
            </div>
            <div class="form-check form-switch mt-3">
                <input class="form-check-input" type="checkbox" id="darkModeSwitch" disabled>
                <label class="form-check-label" for="darkModeSwitch">Dark Mode</label>
            </div>
        </aside>


        <!-- Main Component -->
        <div class="main">
            <main class="content">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container">
        <div id="liveToast" class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Đây là thông báo mẫu cho giáo viên!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/Staff/script.js"></script>
   
    @RenderSection("Scripts", required: false)
</body>
</html>
