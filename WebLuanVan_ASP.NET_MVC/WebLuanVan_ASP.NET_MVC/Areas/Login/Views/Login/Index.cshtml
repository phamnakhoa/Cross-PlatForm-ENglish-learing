@model WebLuanVan_ASP.NET_MVC.Areas.Login.Models.DTOS.DangNhapDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Login/Views/Shared/_LayoutLogin.cshtml";
}
<form asp-action="LogIn" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" aria-describedby="emailHelp" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="form-check">
            <input class="form-check-input primary" type="checkbox" id="flexCheckChecked" checked>
            <label class="form-check-label text-dark" for="flexCheckChecked">
                Remember this Device
            </label>
        </div>
        <a class="text-primary fw-bold" asp-area="ForgotPassword" asp-action="ForgotPassword" asp-controller="ForgotPassword">Forgot Password?</a>
    </div>
    <button type="submit" class="btn btn-primary w-100 py-2 fs-4 mb-4">Sign In</button>
    <div class="d-flex align-items-center justify-content-center">
        <a class="text-primary fw-bold ms-2" asp-area="SignUp" asp-controller="SignUp" asp-action="Index">Create an account</a>
    </div>
</form>
