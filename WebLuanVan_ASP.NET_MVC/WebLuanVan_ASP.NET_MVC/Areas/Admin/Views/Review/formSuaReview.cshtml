@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CReview
@{
    ViewData["Title"] = "Sửa đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-4">
    <div class="card-header bg-warning text-dark">
        <h4>Sửa đánh giá</h4>
    </div>
    <div class="card-body">
        <form asp-action="SuaReview" asp-controller="Review" method="post" asp-route-id="@Model.ReviewId">
            @Html.Partial("_ReviewForm", Model)
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
