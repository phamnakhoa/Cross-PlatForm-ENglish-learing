@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CVocabularyCategoryMapping
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@{
    ViewData["Title"] = "Sửa liên kết từ vựng & danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var vocabularies = ViewBag.Vocabularies as List<CVocabulary>;
    var categories = ViewBag.Categories as List<CVocabularyCategory>;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Sửa liên kết từ vựng & danh mục</h5>
        </div>
        <div class="card-body">
            <form method="post" id="editMappingForm" autocomplete="off">
                <div class="mb-3">
                    <label for="VocabularyId" class="form-label">Từ vựng <span class="text-danger">*</span></label>
                    <select asp-for="VocabularyId" class="form-select select2" required data-placeholder="Chọn từ vựng" disabled>
                        <option value="">-- Chọn từ vựng --</option>
                        @foreach (var v in vocabularies)
                        {
                            <option value="@v.VocabularyId" selected="@(Model.VocabularyId == v.VocabularyId)">@v.Word</option>
                        }
                    </select>
                    <span asp-validation-for="VocabularyId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="VocabularyCategoryId" class="form-label">Danh mục hiện tại</label>
                    <select asp-for="VocabularyCategoryId" class="form-select select2" required data-placeholder="Danh mục hiện tại" disabled>
                        <option value="">-- Chọn danh mục --</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.VocabularyCategoryId" selected="@(Model.VocabularyCategoryId == c.VocabularyCategoryId)">@c.VocabularyCategoryName</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="newCategoryId" class="form-label">Danh mục mới <span class="text-danger">*</span></label>
                    <select name="newCategoryId" class="form-select select2" required data-placeholder="Chọn danh mục mới">
                        <option value="">-- Chọn danh mục mới --</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c.VocabularyCategoryId">@c.VocabularyCategoryName</option>
                        }
                    </select>
                </div>
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-warning" id="btnSave">
                        <span id="btnSaveText">Cập nhật</span>
                        <span id="btnSaveLoading" class="spinner-border spinner-border-sm d-none"></span>
                    </button>
                    <a asp-area="Admin" asp-controller="Vocabulary" asp-action="CategoryMappings" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%',
                allowClear: true,
                placeholder: function(){
                    return $(this).data('placeholder');
                }
            });

            // Hiển thị loading khi submit
            $('#editMappingForm').on('submit', function () {
                $('#btnSaveText').addClass('d-none');
                $('#btnSaveLoading').removeClass('d-none');
            });
        });
    </script>
}

