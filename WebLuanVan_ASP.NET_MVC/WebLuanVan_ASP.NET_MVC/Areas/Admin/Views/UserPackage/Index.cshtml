 @using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@{
    ViewData["Title"] = "Quản lý đăng ký gói cước";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    string searchTerm = ViewBag.SearchTerm;
    Paginate paginate = ViewBag.Paginate ?? new Paginate();
    int pageNo = paginate.CurrentPage;
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="content-header">
    <h1>Quản lý đăng ký gói cước</h1>
</div>
<div class="card mb-4">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <i class="fas fa-table me-1"></i> Danh sách đăng ký gói cước
            </div>
            <div class="col-md-6">
                <form method="get" class="row">
                    <div class="col-md-8">
                        <label class="control-label">Tìm kiếm</label>
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên người dùng hoặc gói cước..." value="@searchTerm">
                            <button type="submit" class="btn btn-primary">Lọc</button>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xóa lọc</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>Danh sách đăng ký gói cước</h2>
    <div>
        <button id="deleteSelected" class="btn btn-danger mr-2" disabled>Xóa đã chọn</button>
        <a asp-action="formCreateUserPackage" class="btn btn-primary">Thêm đăng ký</a>
    </div>
</div>
<form id="deleteForm" asp-action="DeleteMultiple" method="post">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th width="50px"><input type="checkbox" id="selectAll" /></th>
                    <th>Thông tin người dùng</th>
                    <th>Tên gói cước</th>
                    <th>Ngày đăng ký</th>
                    <th>Ngày hết hạn</th>
                    <th width="180px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userPackage in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="rowCheckbox"
                                   data-user-id="@userPackage.UserId"
                                   data-package-id="@userPackage.PackageId" />
                            
                        </td>
                        <!-- chỉnh Fullname chiều cao gấp đôi làm sao ?-->

                        <td>Fullname:@userPackage.Fullname<br />
                        <small >Email: @userPackage.Email </small><br />
                            <small>Phone: @userPackage.Phone </small>
                        </td>
                        <td>@userPackage.PackageName</td>
                        <td>@userPackage.RegistrationDate.ToString("dd/MM/yyyy")</td>
                        <td>@userPackage.ExpirationDateDisplay</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="formUpdateUserPackage"
                                   asp-route-userId="@userPackage.UserId"
                                   asp-route-packageId="@userPackage.PackageId"
                                   class="btn btn-warning">
                                    <i class="fas fa-edit"></i> 
                                </a>
                                <a asp-action="xoaUserPackage"
                                   asp-route-userId="@userPackage.UserId"
                                   asp-route-packageId="@userPackage.PackageId"
                                   onclick="confirmDelete(event)"
                                   class="btn btn-danger">
                                    <i class="fas fa-trash"></i> 
                                </a>
                               
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
<partial name="_Paging" model="@paginate" />
@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2 if needed
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn vai trò',
                allowClear: true,
                width: '100%'
            });

            // Handle select all checkbox
            $('#selectAll').change(function () {
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
                toggleDeleteButton();
            });

            $('.rowCheckbox').change(function () {
                if ($('.rowCheckbox:checked').length === $('.rowCheckbox').length) {
                    $('#selectAll').prop('checked', true);
                } else {
                    $('#selectAll').prop('checked', false);
                }
                toggleDeleteButton();
            });

            function toggleDeleteButton() {
                var checkedCount = $('.rowCheckbox:checked').length;
                $('#deleteSelected').prop('disabled', checkedCount === 0);
                $('#deleteSelected').text(checkedCount > 0 ? `Xóa (${checkedCount}) đã chọn` : 'Xóa đã chọn');
            }

            // Handle delete multiple
            $('#deleteSelected').click(function (e) {
				e.preventDefault(); // mục đích ngăn chặn hành động mặc định của nút
                confirmDeleteMultiple(e, function () {
                    // Collect selected IDs
                    var selectedIds = [];
					$('.rowCheckbox:checked').each(function () { // mục đích lấy tất cả các checkbox đã chọn
						selectedIds.push({ // mục đích tạo đối tượng chứa thông tin người dùng và gói cước
							UserId: parseInt($(this).data('user-id')), // mục đích lấy ID người dùng từ thuộc tính data
							PackageId: parseInt($(this).data('package-id')) // mục đích lấy ID gói cước từ thuộc tính data
                        });
                    });

                    // Send AJAX request
                    $.ajax({
                        url: '@Url.Action("DeleteMultiple", "UserPackage")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(selectedIds),
                        success: function (response) {
                            if (response.success) {

                                location.reload(); // Reload page to refresh data
                            } else {
                                    location.reload(); // Reload page to refresh data
                            }
                        },
                        error: function () {
                            alert('Có lỗi xảy ra khi xóa đăng ký.');
                        }
                    });
                });
            });
        });
    </script>
}