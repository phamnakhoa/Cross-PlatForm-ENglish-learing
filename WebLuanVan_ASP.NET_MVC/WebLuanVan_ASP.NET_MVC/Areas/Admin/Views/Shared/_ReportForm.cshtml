@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CReview
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models

<div class="mb-3">
    <label asp-for="UserId" class="form-label">Người dùng</label>
    <select asp-for="UserId" class="form-select select2" asp-items="@(new SelectList(ViewBag.Users, "UserId", "Fullname"))">
        <option value="">-- Chọn người dùng --</option>
    </select>
    <span asp-validation-for="UserId" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="CourseId" class="form-label">Khóa học</label>
    <select asp-for="CourseId" class="form-select select2" asp-items="@(new SelectList(ViewBag.Courses, "CourseId", "CourseName"))">
        <option value="">-- Chọn khóa học --</option>
    </select>
    <span asp-validation-for="CourseId" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="LessonId" class="form-label">Bài học</label>
    <select asp-for="LessonId" class="form-select select2" asp-items="@(new SelectList(ViewBag.Lessons, "LessonId", "LessonTitle"))">
        <option value="">-- Chọn bài học (nếu có) --</option>
    </select>
    <span asp-validation-for="LessonId" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="ReviewType" class="form-label">Loại báo cáo</label>
    <select asp-for="ReviewType" class="form-select">
        <option value="2">Báo cáo bài học</option>
        <option value="3">Báo cáo khóa học</option>
    </select>
    <span asp-validation-for="ReviewType" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Comment" class="form-label">Bình luận</label>
    <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>
</div>