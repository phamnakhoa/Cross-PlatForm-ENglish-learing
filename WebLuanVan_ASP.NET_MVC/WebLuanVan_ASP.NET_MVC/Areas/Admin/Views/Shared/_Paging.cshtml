@model WebLuanVan_ASP.NET_MVC.Models.Paginate
@{
    // Lấy thông tin route hiện tại
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var area = ViewContext.RouteData.Values["area"]?.ToString();
    
    // Lấy tất cả các query parameters hiện có
    var routeValues = new Dictionary<string, string>();
    foreach (var key in ViewContext.HttpContext.Request.Query.Keys)
    {
        if (key != "page") // Loại bỏ page hiện tại
        {
            routeValues[key] = ViewContext.HttpContext.Request.Query[key];
        }
    }
    
    // Lấy tất cả các route values hiện có
    foreach (var item in ViewContext.RouteData.Values)
    {
        if (item.Key != "action" && item.Key != "controller" && item.Key != "area" && item.Key != "page")
        {
            routeValues[item.Key] = item.Value?.ToString();
        }
    }
}

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" 
                       asp-area="@area" 
                       asp-controller="@controller" 
                       asp-action="@action" 
                       asp-all-route-data="routeValues"
                       asp-route-page="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" 
                       asp-area="@area" 
                       asp-controller="@controller" 
                       asp-action="@action" 
                       asp-all-route-data="routeValues"
                       asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }
            
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" 
                       asp-area="@area" 
                       asp-controller="@controller" 
                       asp-action="@action" 
                       asp-all-route-data="routeValues"
                       asp-route-page="@pge">@pge</a>
                </li>
            }
            
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" 
                       asp-area="@area" 
                       asp-controller="@controller" 
                       asp-action="@action" 
                       asp-all-route-data="routeValues"
                       asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" 
                       asp-area="@area" 
                       asp-controller="@controller" 
                       asp-action="@action" 
                       asp-all-route-data="routeValues"
                       asp-route-page="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>