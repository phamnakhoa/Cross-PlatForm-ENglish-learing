@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@model CPackage

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-box me-2"></i>Thông tin gói cước</h5>
    </div>
    <div class="card-body">
        @if (Model != null)
        {
            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Mã gói cước</div>
                <div class="col-sm-8">@Model.PackageId</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Tên gói cước</div>
                <div class="col-sm-8">@(Model.PackageName ?? "Chưa cập nhật")</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Giá</div>
                <div class="col-sm-8">@(Model.Price?.ToString("N0") ?? "Chưa cập nhật") VNĐ</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Thời hạn</div>
                <div class="col-sm-8">@(Model.DurationDay < 0 || Model.DurationDay == null ? "Vĩnh viễn" : $"{Model.DurationDay} ngày")</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 fw-bold">Hình ảnh</div>
                <div class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.UrlImage))

                    {
                        <img src="@Model.UrlImage" alt="@Model.PackageName" class="img-fluid rounded" style="max-width: 200px;" />
                    }
                    else
                    {
                        <span>Chưa có ảnh</span>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>Chọn một gói cước để xem thông tin chi tiết.
            </div>
        }
    </div>
</div>