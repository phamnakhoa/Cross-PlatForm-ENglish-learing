@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CPaymentMethod

@{
    ViewData["Title"] = "Thêm phương thức thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm phương thức thanh toán</h2>

    <form asp-action="ThemPaymentMethod" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="PaymentMethodId" class="form-control" readonly="readonly" type="hidden" />

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="control-label">Tên phương thức</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="UrlImage" class="form-label">Ảnh Logo (URL)</label>
                            <input asp-for="Logo" class="form-control" id="UrlImage" data-placeholder="Nhập URL ảnh" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                            <div id="imagePreviewContainer" style="display:none;" class="mt-2">
                                <img id="imagePreview" src="#" alt="Image Preview" style="max-width:300px;max-height:200px;" />
                                <p id="imageError" class="text-danger small mt-2" style="display:none;"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%',
                allowClear: true,
                placeholder: function () {
                    return $(this).data('placeholder');
                }
            });
            $('#categoryForm').on('submit', function () {
                $('#btnSaveText').addClass('d-none');
                $('#btnSaveLoading').removeClass('d-inline-block');
            });
            $('#UrlImage').on('input', function () {
                var url = $(this).val();
                var $container = $('#imagePreviewContainer');
                var $img = $('#imagePreview');
                var $error = $('#imageError');

                if (url) {
                    if (/^https?:\/\/.+(\.(jpg|jpeg|png|gif|webp))$/i.test(url)) {
                        $img.attr('src', url)
                            .on('load', function () {
                                $container.show();
                                $error.hide();
                            })
                            .on('error', function () {
                                $container.show();
                                $error.text('Không thể tải ảnh. Vui lòng kiểm tra lại URL.').show();
                                $img.attr('src', '#');
                            });
                    } else {
                        $container.show();
                        $error.text('URL không hợp lệ. Phải bắt đầu bằng http:// hoặc https://').show();
                        $img.attr('src', '#');
                    }
                } else {
                    $container.hide();
                }
            });

            // Nếu có giá trị ban đầu thì hiển thị luôn
            var initialUrl = $('#UrlImage').val();
            if (initialUrl) {
                $('#UrlImage').trigger('input');
            }
        });
    </script>
}