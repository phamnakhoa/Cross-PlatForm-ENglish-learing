@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@{
    ViewData["Title"] = "Quản lý Banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var searchTerm = ViewBag.SearchTerm as string;
    Paginate paginate = ViewBag.Paginate as Paginate ?? new Paginate();
    int pageNo = paginate.CurrentPage;
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="container-fluid px-2 px-md-4">
    <div class="content-header">
        <h1>Quản lý Banner</h1>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <h5>Bộ lọc & Tìm kiếm</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-6">
                    <label class="form-label">Tìm kiếm tiêu đề hoặc phụ đề</label>
                    <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Nhập từ khóa..." autocomplete="off" />
                </div>
                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100 w-md-auto">Tìm kiếm</button>
                </div>
                <div class="col-12 col-md-3">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Banner" class="btn btn-outline-secondary w-100 w-md-auto">Xóa lọc</a>
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center flex-wrap mt-4 mb-3">
        <h2>Danh sách Banner</h2>
        <div class="d-flex flex-wrap gap-2">
            <a asp-action="formThemBanner" class="btn btn-primary">Thêm Banner</a>
        </div>
    </div>
    <div class="table-responsive mb-4">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th class="text-nowrap">Tiêu đề</th>
                    <th class="text-nowrap d-none d-md-table-cell">Phụ đề</th>
                    <th class="text-nowrap">Ảnh</th>
                    <th class="text-nowrap">Kích hoạt</th>
                    <th class="text-nowrap d-none d-md-table-cell">Ngày tạo</th>
                    <th class="text-nowrap">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var banner in Model)
                    {
                        <tr>
                            <td class="text-truncate" style="max-width:180px;" title="@banner.BannerTitle">@banner.BannerTitle</td>
                            <td class="text-truncate d-none d-md-table-cell" style="max-width:140px;" title="@banner.BannerSubtitle">@banner.BannerSubtitle</td>
                            <td>
                                @if (!string.IsNullOrEmpty(banner.BannerImageUrl))
                                {
                                    <img src="@banner.BannerImageUrl" alt="Banner" style="max-width:80px;max-height:40px;border-radius:6px;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>
                            <td>
                                @if (banner.IsActive == true)
                                {
                                    <span class="badge bg-success">Hiện</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ẩn</span>
                                }
                            </td>
                            <td class="d-none d-md-table-cell">
                                @banner.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                <a asp-action="formSuaBanner" asp-route-id="@banner.BannerId" class="btn btn-sm btn-warning" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="xoaBanner" asp-route-id="@banner.BannerId" onclick="return confirm('Bạn có chắc muốn xóa banner này?')" class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-action="viewDetail" asp-route-id="@banner.BannerId" class="btn btn-sm btn-primary" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Không có banner nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_Paging" model="@paginate" />
</div>

@section Scripts {
    <script>
        $('input[name="searchTerm"]').keypress(function (e) {
            if (e.which === 13) {
                $(this).closest('form').submit();
            }
        });
    </script>
}
