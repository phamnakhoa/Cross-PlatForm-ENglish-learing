@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CUsers
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models;
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int? currentRole = ViewBag.CurrentRole;
    var roles = ViewBag.Roles as List<CRole>;
}
<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>Sửa User
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="SuaUser" asp-route-id="@Model.UserId" class="needs-validation" method="post" novalidate>
                <!-- Fix: Add value attribute to ensure UserId is properly sent -->
                <input asp-for="UserId" type="hidden"  />

                <div class="row g-3">
                    <!-- Basic Information -->
                    <div class="col-md-6">
                        <label asp-for="Fullname" class="control-label"></label>
                        <input asp-for="Fullname" class="form-control" required />
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                        <div class="invalid-feedback">Please provide a full name.</div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="invalid-feedback">Please provide a valid email.</div>
                    </div>

                    <!-- Role Selection -->
                    <div class="col-md-6">
                        <label asp-for="RoleId" class="control-label"></label>
                        <select id="roleSelect" asp-for="RoleId" class="form-select select2" required>
                            <option value="">Select a role</option>
                            @foreach (var role in roles)
                            {
                                <option value="@role.RoleId" selected="@(Model.RoleId == role.RoleId)">
                                    @role.RoleName
                                </option>
                            }
                        </select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                        <div class="invalid-feedback">Please select a role.</div>
                    </div>

                    <!-- Contact Information -->
                    <div class="col-md-6">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <!-- Personal Details -->
                    <div class="col-md-4">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Select gender</option>
                            <option value="true" selected="@(Model.Gender == true)">Nam</option>
                            <option value="false" selected="@(Model.Gender == false)">Nữ</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="DateofBirth" class="control-label"></label>
                        <input asp-for="DateofBirth" type="date" class="form-control"
                               value="@(Model.DateofBirth?.ToString("yyyy-MM-dd"))" />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable Select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
        });
    </script>
}