@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CCertificateType

@{
    ViewData["Title"] = "Thêm loại chứng chỉ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm loại chứng chỉ</h2>

    <form asp-action="AddType" method="post" class="needs-validation" novalidate>
        <input asp-for="CertificateTypeId" type="hidden" />

        <div class="row g-3">
            <div class="col-md-12">
                <label asp-for="TypeName" class="control-label"></label>
                <input asp-for="TypeName" class="form-control" required />
                <span asp-validation-for="TypeName" class="text-danger"></span>
                <div class="invalid-feedback">Vui lòng nhập tên loại chứng chỉ.</div>
            </div>
    
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Thêm loại chứng chỉ</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Client-side validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}
