@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CCertificateType

@{
    ViewData["Title"] = "Sửa loại chứng chỉ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-edit me-2"></i>Sửa loại chứng chỉ
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="EditType" asp-route-id="@Model.CertificateTypeId" class="needs-validation" novalidate>
                <input asp-for="CertificateTypeId" type="hidden" />

                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="TypeName" class="control-label"></label>
                        <input asp-for="TypeName" class="form-control" required />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng nhập tên loại chứng chỉ.</div>
                    </div>
                  
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Client-side validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}
