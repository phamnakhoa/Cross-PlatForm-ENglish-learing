@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@model IEnumerable<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CCategory>

@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    string searchTerm = ViewBag.SearchTerm;
}

@{
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="content-header">
    <h1>Quản lý danh mục</h1>
</div>
<div class="card mb-4">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <i class="fas fa-table me-1"></i> Danh sách danh mục
            </div>
            <div class="col-md-6">
                <form method="get" class="row">
                    <div class="col-md-8">
                        <label class="control-label">Tìm kiếm</label>
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên danh mục...." value="@searchTerm">
                            <button type="submit" class="btn btn-primary">Lọc</button>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xóa lọc</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>Danh sách danh mục</h2>
    <div>
        <button id="deleteSelected" class="btn btn-danger mr-2" disabled>Xóa đã chọn</button>
        <a asp-action="formThemCategory" asp-area="Admin" asp-controller="Category" class="btn btn-primary">Thêm danh mục</a>
    </div>
</div>
<form id="deleteForm" asp-action="DeleteMultiple" method="post">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th width="50px"><input type="checkbox" id="selectAll" /></th>
                    <th>Tên danh mục</th>
                    <th>Mô tả</th>
                    <th width="180px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@category.CategoryId" class="rowCheckbox" /></td>
                        <td>@category.CategoryName</td>
                        <td>@Html.Raw(category.Description)</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="formEditCategory" asp-route-id="@category.CategoryId" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="xoaCategory" asp-route-id="@category.CategoryId" onclick="confirmDelete(event)" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-action="viewDetail" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
<!-- Phân trang -->
<partial name="_Paging" model="@paginate" />

@section Scripts {
    <script>
        $(document).ready(function() {
            // Khởi tạo Select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn danh mục',
                allowClear: true,
                width: '100%'
            });

            // Xử lý chọn tất cả
            $('#selectAll').change(function(){
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
                toggleDeleteButton();
            });

            $('.rowCheckbox').change(function() {
                if ($('.rowCheckbox:checked').length === $('.rowCheckbox').length) {
                    $('#selectAll').prop('checked', true);
                } else {
                    $('#selectAll').prop('checked', false);
                }
                toggleDeleteButton();
            });

            function toggleDeleteButton() {
                var checkedCount = $('.rowCheckbox:checked').length;
                $('#deleteSelected').prop('disabled', checkedCount === 0);
                $('#deleteSelected').text(checkedCount > 0 ? `Xóa (${checkedCount}) đã chọn` : 'Xóa đã chọn');
            }

            // Delete multiple handler
            $('#deleteSelected').click(function (e) {
                e.preventDefault();
                confirmDeleteMultiple(e, function(){
                    $('#deleteForm').submit();
                });
            });
        });
    </script>
}