@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CExamSet
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models;
@{
    ViewData["Title"] = "Sửa bộ đề";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int? currentCourse = ViewBag.CurrentCourse;
    var courses = ViewBag.Courses as List<CCourse>;
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-edit me-2"></i>Sửa bộ đề
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="formSuaExamSet" asp-route-id="@Model.ExamSetId" class="needs-validation" novalidate>
                <input asp-for="ExamSetId" type="hidden" />

                <div class="row g-3">
                    <!-- Tên bộ đề -->
                    <div class="col-md-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng nhập tên bộ đề.</div>
                    </div>

                    <!-- Khóa học -->
                    <div class="col-md-6">
                        <label asp-for="CourseId" class="control-label"></label>
                        <select id="courseSelect" asp-for="CourseId" class="form-select select2" required>
                            <option value="">Chọn khóa học</option>
                            @if (courses != null)
                            {
                                foreach (var c in courses)
                                {
                                    <option value="@c.CourseId" selected="@(currentCourse == c.CourseId || Model.CourseId == c.CourseId)">
                                        @c.CourseName
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng chọn khóa học.</div>
                    </div>

                    <!-- Điểm đạt -->
                    <div class="col-md-3">
                        <label asp-for="PassingScore" class="control-label"></label>
                        <input asp-for="PassingScore" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="PassingScore" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng nhập điểm đạt.</div>
                    </div>

                    <!-- Thời gian giới hạn (giây) -->
                    <div class="col-md-3">
                        <label asp-for="TimeLimitSec" class="control-label"></label>
                        <input asp-for="TimeLimitSec" class="form-control" type="number" min="0" required />
                        <span asp-validation-for="TimeLimitSec" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng nhập thời gian (giây).</div>
                    </div>

                    <!-- Ngày tạo -->
                    <div class="col-md-6">
                        <label asp-for="CreatedDate" class="control-label"></label>
                        <input asp-for="CreatedDate" class="form-control" type="datetime-local"
                               value="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm")" required />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        <div class="invalid-feedback">Vui lòng nhập ngày tạo.</div>
                    </div>

                    <!-- Mô tả -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" id="summernote-description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .select2-container--default .select2-selection--single {
            height: calc(1.5em + 1rem + 2px);
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
        }

            .select2-container--default .select2-selection--single .select2-selection__arrow {
                height: calc(1.5em + 1rem + 2px);
            }

        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
        }

        .card-header {
            border-bottom: 1px solid rgba(33, 40, 50, 0.125);
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });

            // Client-side validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })();
        });
    </script>
}
