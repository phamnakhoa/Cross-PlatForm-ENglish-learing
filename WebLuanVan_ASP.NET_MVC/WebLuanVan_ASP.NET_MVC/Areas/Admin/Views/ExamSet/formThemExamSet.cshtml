@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@model CExamSet

@{
    ViewData["Title"] = "Thêm bộ đề";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var courses = ViewBag.Courses as List<CCourse>;
    var currentCourse = ViewBag.CurrentCourse;

}

<div class="container mt-4">
    <h2 class="mb-4">Thêm bộ đề</h2>

    <form asp-action="formThemExamSet" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ExamSetId" type="hidden" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Dropdown cho Khóa học -->
                        <div class="mb-3">
                            <label asp-for="CourseId" class="control-label"></label>
                            <select id="courseSelect" name="CourseId" class="form-select select2">
                                <option value="">-- Chọn khóa học --</option>
                                @if (courses != null)
                                {
                                    foreach (var course in courses)
                                    {
                                        <option value="@course.CourseId" selected="@(currentCourse == course.CourseId)">
                                            @course.CourseName
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PassingScore" class="control-label"></label>
                            <input asp-for="PassingScore" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="PassingScore" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="TimeLimitSec" class="control-label"></label>
                            <input asp-for="TimeLimitSec" class="form-control" type="number" min="0" placeholder="Thời gian (giây)" />
                            <span asp-validation-for="TimeLimitSec" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CreatedDate" class="control-label"></label>
                            <input asp-for="CreatedDate" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-12">
                <label asp-for="Description" class="control-label"></label>
                <div class="card">
                    <textarea asp-for="Description" id="summernote-description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Thêm bộ đề</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn khóa học',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
