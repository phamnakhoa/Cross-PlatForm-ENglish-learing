@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models
@model IEnumerable<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CPackage>

@{
    ViewData["Title"] = "Quản lý gói cước";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    string searchTerm = ViewBag.SearchTerm;
    Paginate paginate = new Paginate();
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;
    }
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="content-header">
    <h1>Quản lý gói cước</h1>
</div>
<div class="card mb-4">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <i class="fas fa-table me-1"></i> Danh sách gói cước
            </div>
            <div class="col-md-6">
                <form method="get" class="row">
                    <div class="col-md-8">
                        <label class="control-label">Tìm kiếm</label>
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên gói cước...." value="@searchTerm">
                            <button type="submit" class="btn btn-primary">Lọc</button>
                            @if (!string.IsNullOrEmpty(searchTerm))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xóa lọc</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>Danh sách gói cước</h2>
    <div>
        <button id="deleteSelected" class="btn btn-danger mr-2" disabled>Xóa đã chọn</button>
        <a asp-action="formThemPackage" asp-area="Admin" asp-controller="Package" class="btn btn-primary">Thêm gói cước</a>
    </div>
</div>
<form id="deleteForm" asp-action="DeleteMultiple" method="post">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th width="50px"><input type="checkbox" id="selectAll" /></th>
                    <th>@Html.DisplayNameFor(model => model.PackageName)</th>
                    <th>@Html.DisplayNameFor(model => model.DurationDay)</th>
                    <th>@Html.DisplayNameFor(model => model.IncludedPackageIds)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th width="180px">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var package in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@package.PackageId" class="rowCheckbox" /></td>
                        <td>@package.PackageName</td>
                    
                        <td>@(
                                package.DurationDay < 0 || package.DurationDay == null ? "Vĩnh viễn" : $"{package.DurationDay} ngày")
                        </td>

                        <td>
                        @if (package.IncludedPackageIds != null && package.IncludedPackageIds.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var includedId in package.IncludedPackageIds)
                                {
                                    var includedPackage = CXuLy.getPackageById(includedId.ToString());
                                    if (includedPackage != null)
                                    {
                                        <li>@includedPackage.PackageName</li>
                                    }
                                    else
                                    {
                                        <li>Gói cước ID @includedId (Không tìm thấy)</li>
                                    }
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Không có gói cước bao gồm</span>
                        }
                        </td>
                        <td>@(package.Price?.ToString("N0"))</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="formEditPackage" asp-route-id="@package.PackageId" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="xoaPackage" asp-route-id="@package.PackageId" onclick="confirmDelete(event)" class="btn btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                               
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
<!-- Phân trang -->
<partial name="_Paging" model="@paginate" />

@section Scripts {
    <script>
        $(document).ready(function() {
            // Khởi tạo Select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn gói cước',
                allowClear: true,
                width: '100%'
            });

            // Xử lý chọn tất cả
            $('#selectAll').change(function(){
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
                toggleDeleteButton();
            });

            $('.rowCheckbox').change(function() {
                if ($('.rowCheckbox:checked').length === $('.rowCheckbox').length) {
                    $('#selectAll').prop('checked', true);
                } else {
                    $('#selectAll').prop('checked', false);
                }
                toggleDeleteButton();
            });

            function toggleDeleteButton() {
                var checkedCount = $('.rowCheckbox:checked').length;
                $('#deleteSelected').prop('disabled', checkedCount === 0);
                $('#deleteSelected').text(checkedCount > 0 ? `Xóa (${checkedCount}) đã chọn` : 'Xóa đã chọn');
            }

            // Delete multiple handler
            $('#deleteSelected').click(function (e) {
                e.preventDefault();
                confirmDeleteMultiple(e, function(){
                    $('#deleteForm').submit();
                });
            });
        });
    </script>
}