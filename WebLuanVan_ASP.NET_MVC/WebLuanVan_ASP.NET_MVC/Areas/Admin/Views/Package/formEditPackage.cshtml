@model WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CPackage
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models;

@{
    ViewData["Title"] = "Edit Package";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var allPackge = ViewBag.AllPackage as List<CPackage>;

}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-edit me-2"></i>Sửa gói cước</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-white">
            <i class="fas fa-box-open me-1"></i> Thông tin gói cước
        </div>
        <div class="card-body">
            <form asp-action="EditPackage" asp-route-id="@Model.PackageId" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input asp-for="PackageId" type="hidden" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PackageName" class="form-control" placeholder=" " required />
                            <label asp-for="PackageName" class="form-label"></label>
                            <span asp-validation-for="PackageName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="DurationDay" class="form-control" placeholder="dể trống vĩnh vĩnh " />
                            <label asp-for="DurationDay" class="form-label"></label>
                            <span asp-validation-for="DurationDay" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="Price" class="form-control" placeholder=" " required />
                            <label asp-for="Price" class="form-label"></label>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <!-- Thêm trường chọn gói cước bao gồm -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-label">Gói cước bao gồm</label>
                            <select asp-for="IncludedPackageIds" class="form-select select2" multiple="multiple">
                                @if (allPackge != null)
                                {
                                    foreach (var package in allPackge)
                                    {
                                        <option value="@package.PackageId">@package.PackageName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IncludedPackageIds" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-1"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times me-1"></i> Hủy
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        // Client-side validation
        document.addEventListener('DOMContentLoaded', function() {
            // Khởi tạo Select2 cho dropdown chọn nhiều
            $('.select2').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn gói cước bao gồm',
                allowClear: true,
                width: '100%'
            });
            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
}