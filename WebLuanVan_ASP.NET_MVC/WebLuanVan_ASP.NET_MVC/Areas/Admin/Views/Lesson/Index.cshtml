@model IEnumerable<WebLuanVan_ASP.NET_MVC.Areas.Admin.Models.CLesson>
@using WebLuanVan_ASP.NET_MVC.Areas.Admin.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    // Filter values
    int? currentCourse = ViewBag.CurrentCourse;
    DateOnly? currentDate = ViewBag.CurrentDate;
    bool? currentActivate = ViewBag.CurrentActivate;

    var availableDates = ViewBag.AvailableDates as List<DateOnly>;
}
@{
    Paginate paginate = new Paginate();
    // số trang sẽ mặc định là 0
    int pageNo = 0;
    if (ViewBag.Paginate != null)
    {
        paginate = ViewBag.Paginate;
        pageNo = paginate.CurrentPage;

    }
}
<link rel="stylesheet" href="~/AdminTL/assets/css/index.css">

<div class="content-header">
    <h1>Quản lý bài học</h1>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5>Bộ lọc</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row">


            <!-- Date Filter -->
            <div class="col-md-4">
                <label class="form-label">Ngày tạo</label>
                <select id="dateSelect" name="dateFilter" class="form-select select2">
                    <option value="">Tất cả ngày</option>
                    @foreach (var date in availableDates)
                    {
                        <option value="@date.ToString("yyyy-MM-dd")" selected="@(currentDate == date)">
                            @date.ToString("dd/MM/yyyy")
                        </option>
                    }
                </select>
            </div>

            <!-- Status Filter -->
            <div class="col-md-4">
                <label class="form-label">Trạng thái</label>
                <select name="isActive" class="form-select select2">
                    <option value="">Tất cả</option>
                    <option value="true" selected="@(currentActivate == true)">Kích hoạt</option>
                    <option value="false" selected="@(currentActivate == false)">Chưa kích hoạt</option>
                </select>
            </div>
            <!-- Filter Buttons -->

            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Lọc</button>
                @if (currentCourse.HasValue || currentDate != null || currentActivate.HasValue)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Xóa lọc</a>
                }
            </div>
           
        </form>
    </div>
</div>

<!-- Thêm form ẩn để submit -->
<a id="addToCourseLink" asp-action="SelectCourseForLessons" style="display:none;"></a>

<!-- Content Section -->
<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>Danh sách bài học</h2>
    <div>
        <button id="InsertCourseSelected" class="btn btn-primary mr-2" disabled>Thêm vào khóa học</button>
        <button id="deleteSelected" class="btn btn-danger mr-2" disabled>Xóa đã chọn</button>
        <a asp-action="formThemLesson" class="btn btn-primary">Thêm bài học</a>
    </div>
</div>

<form id="deleteForm" asp-action="DeleteMultiple" method="post">
    <div class="table-responsive">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th><input type="checkbox" id="selectAll" /></th>
                 
                    <th>Tên bài học</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th style="text-align:center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lesson in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedIds" value="@lesson.LessonId" class="rowCheckbox" /></td>
                        <td>@lesson.LessonTitle</td>
                        <td>@lesson.Duration.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @(lesson.IsActivate ? "bg-success" : "bg-secondary")">
                                @(lesson.IsActivate ? "Kích hoạt" : "Chưa kích hoạt")
                            </span>
                        </td>
                        <td>
                            <a asp-action="formSuaLesson"  asp-route-id="@lesson.LessonId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>

                            </a>
                            <a asp-action="xoaLesson" asp-route-id="@lesson.LessonId" onclick="confirmDelete(event)" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a asp-action="viewQuestion" asp-route-id="@lesson.LessonId" class="btn btn-sm btn-primary">
                                 <i class="fas fa-eye"></i>
                            </a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
<!--Phân trang-->
<!-- phải có _*.cshtml mới partial được-->
<partial name="_Paging" model="@paginate" />
@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('.select2').select2({
                placeholder: "Chọn tùy chọn",
                allowClear: true
            });

            // Checkbox handling
            $('#selectAll').change(function () {
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
                toggleDeleteButton();
            });

            $('.rowCheckbox').change(function () {
                if ($('.rowCheckbox:checked').length === $('.rowCheckbox').length) {
                    $('#selectAll').prop('checked', true);
                } else {
                    $('#selectAll').prop('checked', false);
                }
                toggleDeleteButton();
            });

            function toggleDeleteButton() {
                var checkedCount = $('.rowCheckbox:checked').length;
                $('#deleteSelected').prop('disabled', checkedCount === 0);
                $('#deleteSelected').text(checkedCount > 0 ? `Xóa (${checkedCount}) đã chọn` : 'Xóa đã chọn');
                $('#InsertCourseSelected').prop('disabled', checkedCount === 0);
                $('#InsertCourseSelected').text(checkedCount > 0 ? `Thêm (${checkedCount}) vào khóa học` : 'Thêm vào khóa học');
            }

            // Delete multiple handler
            $('#deleteSelected').click(function (e) {
                e.preventDefault();
                confirmDeleteMultiple(e, function() {
                    $('#deleteForm').submit();
                });
            });

               // Xử lý khi click nút "Thêm đã chọn"
            $('#InsertCourseSelected').click(function (e) {
            e.preventDefault();
            var checkedCount = $('.rowCheckbox:checked').length;
            if (checkedCount === 0) return;

            // Lấy danh sách ID bài học đã chọn
            var selectedIds = $('.rowCheckbox:checked').map(function() {
                return $(this).val();
            }).get().join(',');
            
            // Lưu vào sessionStorage và chuyển trang
            sessionStorage.setItem('selectedLessonIds', selectedIds);
            $('#addToCourseLink')[0].href = $('#addToCourseLink')[0].href + '?lessonIds=' + selectedIds;
            $('#addToCourseLink')[0].click();
        });
     });
       
    </script>
}